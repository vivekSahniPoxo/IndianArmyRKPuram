<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Light background color -->
            <corners android:radius="16dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
    <item android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Light color on top and left for highlight -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item android:left="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#9E9E9E" /> <!-- Dark color on bottom and right for shadow -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>